<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- POS Session layout template -->
		<template id="pos_retail.pos_layout">
			<div class="article">
				<t t-call="pos_retail.pos_layout_header" />
				<t t-raw="0" />
				<t t-call="pos_retail.pos_layout_footer" />
			</div>
		</template>

		<!-- POS Session Header template -->
		<template id="pos_retail.pos_layout_header">
			<t t-if="o and 'company_id' in o">
				<t t-set="company" t-value="o.company_id"></t>
			</t>
			<t t-if="not o or not 'company_id' in o">
				<t t-set="company" t-value="res_company"></t>
			</t>
			<div class="header">
				<div class="row">
					<div class="col-xs-3">
						<span
							t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')" />
					</div>
					<div class="col-xs-3 col-xs-offset-1 text-center">
						<span t-esc="company.name" />
					</div>
					<div class="col-xs-2 col-xs-offset-3 text-right">
						<ul class="list-inline">
							<li>
								<span class="page" />
							</li>
							<li>/</li>
							<li>
								<span class="topage" />
							</li>
						</ul>
					</div>
				</div>
			</div>
		</template>

		<!-- POS Session Footer layout template -->
		<template id="pos_retail.pos_layout_footer">
			<div class="footer">
				<div class="row">
					<table class="table-footer">
						<thead>
							<tr>
								<td>-------------------------------------</td>
								<td>-------------------------------------</td>
								<td>-------------------------------------</td>
							</tr>
							<tr>
								<td>Confirmed by:</td>
								<td>Verified by Supervisor:</td>
								<td>Reviewed by Finance:</td>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td>
									Responsible:
									<span t-field="o.user_id" />
								</td>
								<td>Name: ...................................</td>
								<td>Name: ...................................</td>
							</tr>
							<tr>
								<td>Date/Time: ............................</td>
								<td>Date/Time: ............................</td>
								<td>Date/Time: ............................</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</template>

