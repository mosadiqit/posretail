<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="sync_backend_status">
        <div class="oe_status js_synch status_sync_backend">
            <span class='js_msg oe_hidden'>0</span>
            <div class="js_connected oe_icon oe_green">
                <i class='fa fa-fw fa-refresh' role="img" aria-label="Synchronisation Connected" title="Synchronisation Succeed"></i>
            </div>
            <div class="js_connecting oe_icon notifications_coming blink oe_hidden">
                <i class='fa fa-fw fa-spin fa-spinner' role="img" aria-label="Synchronisation Connecting" title="Syncing"></i>
            </div>
            <div class="js_disconnected oe_icon oe_red blink oe_hidden">
                <i class='fa fa-fw fa-refresh'></i>
            </div>
        </div>
    </t>

</templates>
